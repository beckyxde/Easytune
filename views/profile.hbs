<!DOCTYPE html>
<div lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/profile.css" />
  </head>

  <header class="header">
    <h1 role="banner"><a href="/">easytune</a></h1>
    <ul class="nav">
      <li><a href="/">Back to Homepage</a></li>
      <li><a href="/signup">Logout</a></li>
    </ul>
  </header>

  <div class="flex-box">
    <p>{{user.name}}'s Events</p>
  </div>

  <ul id="resultsList" class="container">

    {{#each events}}

    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">
          <p class="card-text">{{user.starred_events}}</p>{{this.name}}<span>
            <button type="button" class="favourite" id={{ this.id }} onclick="likeThis(this)">‚≠ê</button></span>
        </h5>
        <p class="card-text">[ {{this.classifications.[0].genre.name}} ] <br>
          where: {{this._embedded.venues.[0].name}} <br>
          when: {{this.dates.start.localDate}}, {{this.dates.start.localTime}}</p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>
    {{else}}

    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Berlin sleeps - we've found no
          {{this.classifications.[0].genre.name}} events</h5>
        <p class="card-text"></p>
      </div>
    </div>
    {{/each}}
  </ul>

  </html>

  <script src="/javascripts/script.js"></script>