<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

<h2>Sign Up</h2>

<form action="/signup" method="POST" id="form-container">
<label for="name">Name</label>
  <input id="name" type="text" name="name" placeholder="JonSnow">
  <br><br>
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="JonSnow">
  <br><br>
  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">
<br><br>

  <div>
  <input type="submit" value="Signup">
  </div>

  {{#if message}}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <p class="account-message">
    Do you already have an account?
  </p>
</form>

<h2>Login</h2>

<form action="/homepage" method="POST" id="form-container">
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="JonSnow">
  <br><br>
  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">
  <br><br>

  <div>
  <input type="submit" value="Login">
  </div>

  {{#if message}}
    <div class="error-message">{{ message }}</div>
  {{/if}}
  <br><br>
  
</form>